<div ng-controller="rawMaterialTypeController as vm">
    <div class="row">
        <form id="frmNewRawMaterialType" role="form" name="newRawMaterialTypeForm" class="form-inline" novalidate>
            <fieldset>
                <legend>Add Raw Material Type</legend>
                <input id="rawMaterialTypeId" ng-model="vm.rawMaterialType.id" type="hidden" />
                <div class="form-group">
                    <label for="rawMaterialTypeCode">Raw Material Type Code</label>
                    <input id="rawMaterialTypeCode" ng-model="vm.rawMaterialType.rawMaterialTypeCode" class="form-control" placeholder="Enter Raw Material Type Code Here" required />
                </div>
                <div class="form-group">
                    <label for="rawMaterialTypeName">Raw Material Type Name</label>
                    <input id="rawMaterialTypeName" ng-model="vm.rawMaterialType.rawMaterialTypeName" class="form-control" placeholder="Enter Raw Material Type Name Here" required />
                </div>
                <button ng-click="vm.saveRawMaterialType()" ng-disabled="newRawMaterialTypeForm.$invalid" type="submit" class="btn btn-primary">Save</button>
            </fieldset>
        </form>

    </div>
    <div class="row">

        <legend>All Raw Material Types</legend>
    </div>
    <div class="row">
        <button ng-click="vm.editSelectedRow()" class="btn btn-primary" ng-disabled="vm.disableEdit" style="margin:10px 0 10px 0">Edit Selected Row</button>
        <button ng-click="vm.deleteRawMaterialType()" class="btn btn-primary" ng-disabled="vm.disableEdit" style="margin:10px 0 10px 0">Delete Selected Row</button>
    </div>
    <div class="row">
        <div id="rawMaterialTypeGrid" ui-grid="vm.gridOptions" ui-grid-selection class="uigrid"></div>
    </div>
</div>